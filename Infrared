//Initializing where the pin is connected to which sensor
#define IR_PIN 7
#define INVERT_LOGIC 1 //setting 1 for normal IR sensor logic

//Initializing serial communication 
void setup() {
  pinMode(IR_PIN, INPUT);
  Serial.begin(9600);
}

//Sensing 
void loop() {
  int data = digitalRead(IR_PIN);
  if (!INVERT_LOGIC) {
    data = !data; 
  }
  //Logic: If the IR sensor outputs LOW --> obstacle detected 
  if (data == 0) {
    Serial.println("The object is being detected!");
  }else{
    Serial.println("Object is not detected");
  }

  //Arduino waits 1 second before reading again, the output will update every second
  delay(1000); 
  
}

