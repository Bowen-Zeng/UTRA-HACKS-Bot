// ---- Motor Driver L298N ----

#define ENA 5
#define IN1 8
#define IN2 9
#define ENB 6
#define IN3 10
#define IN4 11

// ---- IR Sensors ----

#define IR_LEFT A0
#define IR_RIGHT A1

// ---- Ultrasonic ----

#define TRIG 12
#define ECHO 13

// ---- Servos ----

#define SERVO_GRIP 3
#define SERVO_SHOOT 4

// ---- Color Sensor (V575) ----

#define COLOR_S0 2
#define COLOR_S1 7
#define COLOR_S2 A2
#define COLOR_S3 A3
#define COLOR_OUT A4
